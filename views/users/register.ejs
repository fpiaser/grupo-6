<!DOCTYPE html>
<html lang="en">
<!-- Page head -->

<%- include('../partials/head') %> 

<body>
    <!-- header -->
    <%- include('../partials/header') %>
    <!-- Page content -->
    <main>
        <form class="formulario" action="/user" method="post" enctype="multipart/form-data" id="formulario">
            <fieldset>
                <legend>Crear Cuenta</legend>
                    <div class="campo">
                        <label for="nombre">Nombre </label>
                        <input type="text" placeholder="Coloca tu nombre" id="nombre" name="nombre"
                        value="<%= locals.old && locals.old.nombre ? locals.old.nombre : '' %>">
                        <p class="error-form" id="error-title"></p> 
                        <i class="fa-regular fa-circle-check" id="check-nombre"></i>
                        <p class="error-nombre" id="error-nombre1">El Nombre debe tener mas de dos letras.</p>
                        <% if (locals.errors && locals.errors.nombre) { %>
                            <span class="error"><%= locals.errors.nombre.msg %></span>
                        <% } %>
                        
                    </div>
                  
                    <div class="campo">
                        <label for="Apellido">Apellido </label>
                        <input type="text" placeholder="Coloca tu apellido" id="apellido" name="apellido"
                        value="<%= locals.old && locals.old.apellido ? locals.old.apellido : '' %>">
                        <i class="fa-regular fa-circle-check" id="check-apellido"></i>
                        <p class="error-nombre" id="error-nombre2">El apellido debe tener mas de dos letras.</p>


                        <% if (locals.errors && locals.errors.apellido) { %>
                            <span class="error"><%= locals.errors.apellido.msg %></span>
                        <% } %>
                    </div>
                    <!--EMAIL-->



                    <div class="campo">
                        <label for="email">Correo electr칩nico</label>
                        <input type="email" placeholder="nombre@tucorreo" id="email" name="email"
                        value="<%= locals.old && locals.old.email ? locals.old.email : '' %>">
                        <i class="fa-regular fa-circle-check" id="check-email"></i>
                        <p class="error-nombre" id="error-correo">El correo debe ser valido</p>
                        <% if (locals.errors && locals.errors.email) { %>
                            <span class="error"><%= locals.errors.email.msg %></span>
                        <% } %>
                    </div>


                    <div class="campo">
                        <label for="password">Contrase침a</label>
                        <input type="password" placeholder="Tu contrase침a" id="password" name="password"
                        value="<%= locals.old && locals.old.password ? locals.old.password : '' %>">
                        <i class="fa-regular fa-circle-check" id="check-password"></i>
                        <p class="error-nombre" id="error-password">La contrase침a debe tener al menos ocho caracteres.</p>
                        <% if (locals.errors && locals.errors.password) { %>
                            <span class="error"><%= locals.errors.password.msg %></span>
                        <% } %>

                    </div>
                    <div class="campo">
                        <label for="imagen">Subir una foto </label>
                        <input type="file" id="imagen" name="imagen" multiple >
                        <p class="error-nombre" id="error-imagen">Obligatorio imagen con formato especifico</p>
                        <% if (locals.errors && locals.errors.imagen) { %>
                            <span class="error"><%= locals.errors.imagen.msg %></span>
                        <% } %>
                    </div>
            </fieldset>
            <input type="submit" type="reset" value="Crear Cuenta" class="btn">
            
        </form>

    
    </main>
   
    <%- include('../partials/footer') %>
    <!-- <script src="/js/register.js"></script> -->
    <Script src="/js/register.js"></Script>
</body>
</html>

