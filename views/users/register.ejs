<!DOCTYPE html>
<html lang="en">
<!-- Page head -->

<%- include('../partials/head') %> 

<body>
    <!-- header -->
    <%- include('../partials/header') %>
    <!-- Page content -->
    <main>
        <form class="formulario" action="/user" method="post" enctype="multipart/form-data">
            <fieldset>
                <legend>Crear Cuenta</legend>
                    <div class="campo">
                        <label for="nombre">Nombre </label>
                        <input type="text" placeholder="Coloca tu nombre" id="nombre" name="nombre">
                    </div>
                    <div class="campo">
                        <label for="Apellido">Apellido </label>
                        <input type="text" placeholder="Coloca tu apellido" id="apellido" name="apellido">
                    </div>
                    <div class="campo">
                        <label for="email">Correo electrónico</label>
                        <input type="email" placeholder="nombre@tucorreo" id="email" name="email">
                    </div>
                    <div class="campo">
                        <label for="password">Contraseña</label>
                        <input type="password" placeholder="Tu contraseña" id="password" name="password">
                    </div>
                    <div class="campo">
                        <label for="imagen">Subir una foto </label>
                        <input type="file"  id="imagen" name="imagen" multiple>
                    </div>
                    
            </fieldset>
            
            <input type="submit" value="Crear Cuenta" class="btn">
            
        </form>

    
    </main>
    <%- include('../partials/footer') %>
</body>
</html>

