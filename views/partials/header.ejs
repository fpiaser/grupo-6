<header class="cabecera">
    <input type="checkbox" id="btn-menu">
    <div class="logo" >
        <a href="/"><img src="/images/nuevo_logo_meal.png" alt="Vegan Meal" ></a>
    </div>
    <div class="navegacion">
        <div class="burger-menu">
            <label for ="btn-menu"class="fa fa-bars burger" id="menu_burger"></label>
        </div>
        <nav class="menu">
            <div class="menu-inicio">
                <a href="/">Inicio</a>
            </div>
            <div class="menu-productos">
                <a href="/product">Productos</a>
            </div>
            <% if(!locals.user) {%>
            <div class="menu-registro">
                <a href="/user/registro">Registro</a>
            </div>
            <div class="menu-login">
                <a href="/user/login">Login</a>
            </div>
            <% } else {%>
            <a href="/user">
                <h3><%= 'Hola ' + user.nombre + ' ' + user.apellido %></h3>
            </a>
            <form action="/user/logout" method="GET">
                <button type="submit">Cerrar Sesion</button>
              </form>
            <% } %>
        </nav>
    </div>
    <div class="cart">
            <a href="/product/carrito"><i class="fa-solid fa-cart-shopping"></i></a>   
    </div>

